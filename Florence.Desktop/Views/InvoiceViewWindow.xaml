<Window x:Class="Florence.Desktop.Views.InvoiceViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Details"
        Width="600"
        Height="600"
        Background="{DynamicResource Brush.Surface}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Invoice Details"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Brush.Text}"
                       Margin="0,0,0,20"/>

            <Border Background="{DynamicResource Brush.Surface2}"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Invoice Number:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding InvoiceNumber}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Customer:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding CustomerName}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Status:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Status}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Payment Method:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding PaymentMethod}" Foreground="{DynamicResource Brush.Text}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Date Created:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding DateCreated}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Due Date:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding DueDate}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Payment Date:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding PaymentDate}" Foreground="{DynamicResource Brush.Text}"/>

                        <TextBlock Text="Currency:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Currency}" Foreground="{DynamicResource Brush.Text}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Text="Invoice Items"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{DynamicResource Brush.Text}"
                       Margin="0,0,0,5"/>

            <Border BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    Background="{DynamicResource Brush.Surface2}"
                    Margin="0,0,0,15">
                <DataGrid ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Style="{StaticResource ModernDataGrid}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="3*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Background="{DynamicResource Brush.Surface2}"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Subtotal:" Foreground="{DynamicResource Brush.Text}" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding Subtotal}" Foreground="{DynamicResource Brush.Text}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Discount (%):" Foreground="{DynamicResource Brush.Text}" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding DiscountPercent, StringFormat=\{0:F2\}%}" Foreground="{DynamicResource Brush.Text}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Discount Amount:" Foreground="{DynamicResource Brush.Text}" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding DiscountAmount}" Foreground="{DynamicResource Brush.Text}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="VAT:" Foreground="{DynamicResource Brush.Text}" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="{Binding VatAmount}" Foreground="{DynamicResource Brush.Text}" Grid.Row="3" Grid.Column="1"/>

                    <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="{DynamicResource Brush.Border}" Margin="0,10,0,10"/>

                    <TextBlock Text="TOTAL:" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource Brush.Primary}" Grid.Row="5" Grid.Column="0"/>
                    <TextBlock Text="{Binding Total}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource Brush.Primary}" Grid.Row="5" Grid.Column="1"/>
                </Grid>
            </Border>

            <TextBlock Text="Notes:" Style="{StaticResource FormLabel}" Margin="0,15,0,0"/>
            <TextBlock Text="{Binding Notes}" TextWrapping="Wrap" Foreground="{DynamicResource Brush.Text}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Print Invoice" Click="Print_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="Close" Click="Close_Click" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>