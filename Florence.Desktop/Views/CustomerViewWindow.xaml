<Window x:Class="Florence.Desktop.Views.CustomerViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Details"
        Width="600" Height="600"
        Background="{DynamicResource Brush.Surface}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Customer Details"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Brush.Text}"
                       Margin="0,0,0,20"/>

            <Border Background="{DynamicResource Brush.Surface2}"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Customer ID:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding Id}" Foreground="{DynamicResource Brush.Text}" />

                        <TextBlock Text="Name:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource Brush.Text}" />

                        <TextBlock Text="Email:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Email}" Foreground="{DynamicResource Brush.Text}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Phone:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding Phone}" Foreground="{DynamicResource Brush.Text}" />

                        <TextBlock Text="Address:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Address}" TextWrapping="Wrap" Foreground="{DynamicResource Brush.Text}" />

                        <TextBlock Text="Invoice Count:" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding InvoiceCount}" Foreground="{DynamicResource Brush.Text}" />
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Text="Invoices"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{DynamicResource Brush.Text}"
                       Margin="0,0,0,5"/>

            <Border BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    Background="{DynamicResource Brush.Surface2}">
                <DataGrid x:Name="InvoicesGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                                    MouseDoubleClick="InvoicesGrid_MouseDoubleClick"

                          Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Invoice #" Binding="{Binding Id}" Width="*" />
                        <DataGridTextColumn Header="Date" Binding="{Binding DateCreated}" Width="*" />
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=\{0:C\}}" Width="*" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Button Content="Close"
                    Click="Close_Click"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>
