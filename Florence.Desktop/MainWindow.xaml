<mah:MetroWindow x:Class="Florence.Desktop.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 Title="Florence Healthcare"
                 WindowStartupLocation="CenterScreen"
                 WindowState="Maximized"
                 GlowBrush="{x:Null}"
                 WindowTitleBrush="Black"
                 NonActiveWindowTitleBrush="DarkGray">



    <mah:HamburgerMenu x:Name="RootNav"
                   PanePlacement="Left"
                   IsPaneOpen="True"
                   DisplayMode="CompactInline"
                   ItemInvoked="RootNav_ItemInvoked"
                   ItemsSource="{Binding MenuItems}">
        <mah:HamburgerMenu.PaneBackground>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1a1a1a" Offset="0"/>
                <GradientStop Color="#FF333333" Offset="0.5"/>
                <GradientStop Color="#FF1a1a1a" Offset="1"/>
            </LinearGradientBrush>
        </mah:HamburgerMenu.PaneBackground>

        <mah:HamburgerMenu.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="10,5">
                    <iconPacks:PackIconMaterial Kind="{Binding Icon}"
                                        Width="22"
                                        Height="22"
                                        VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Label}"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}, Path=IsPaneOpen}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </DataTemplate>
        </mah:HamburgerMenu.ItemTemplate>

        <mah:HamburgerMenu.Content>
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   JournalOwnership="OwnsJournal"
                   Margin="12"
                   Focusable="False" />
        </mah:HamburgerMenu.Content>
    </mah:HamburgerMenu>
</mah:MetroWindow>
